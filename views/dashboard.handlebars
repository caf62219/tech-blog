{{#if logged_in}}
<div class="row text-center">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <a class="col-md-4" href="/dashboard/create-post">
        <button class="btn btn-lg btn-primary " id="newpost-btn" >Add New Blog Post</button>
      </a>

{{#if blogposts.length}}
   <div class="col-md-6 blogpost-list">
    <h3>Current Blog Posts:</h3>

    {{#each blogposts as |blogpost|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/dashboard/blogpost/{{blogpost.id}}">{{blogpost.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger " data-id="{{blogpost.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
 
</div>

<script src="./js/dashboard.js"></script>
{{/if}}