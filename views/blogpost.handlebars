<div>
<div class="text-center" >
  <h2 id="bp-h">{{title}}</h2>
  <p id="bp-p">{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
 <div>

{{#if comments.length}}
 <h5>Comments:</h5>
<div> 
    {{#each comments as |comment|}}
    <p>
        {{comment.comment_info}}
    </p>
    <p>
        Added by: {{user.name}}, {{format_date comment.date_created}}
    </p>
{{/each}}
</div>
{{/if}}

{{#if logged_in}}

{{> comment this}}

{{/if}}
</div>
<script src="/js/comment.js"></script>