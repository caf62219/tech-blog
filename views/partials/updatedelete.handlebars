
  <form class="form update-form" data-id="{{id}}">
      <div class="form-group">
        <label for="update-title">Blog Post title:</label>
        <input class="form-input" type="text" id="update-title" name="update-title" value="{{title}}"/>
      </div>
      <div class="form-group">
        <label for="update-content">Content:</label>
        <textarea class="form-input" type="text" id="update-content" name="update-content" value="{{content}}"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" >Submit Update</button>
      </div>
  </form>
  

  
 

