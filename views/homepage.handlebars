<!-- loop over each object in the blog post array -->
{{#each blogPosts as |blogpost|}}
<div class="row mb-4">
    <div class="col-md-5"
        <h2>
            <a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a>
        </h2>
        <p>
            Created on {{format_date blogpost.date_created}}
        </p>
    </div>
</div>
{{/each}}